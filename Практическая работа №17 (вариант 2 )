#include <bits/stdc++.h>
using namespace std;
int main() {
    int n, x;
    cout << "Введите размер массива: ";
    cin >> n;
    int arr[n];
    cout << "Введите " << n << " элементов массива: ";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }
    cout << "Введите число для поиска: ";
    cin >> x;
    
    sort(arr, arr + n);
    
    cout << "Отсортированный массив: ";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
    
    int left = 0;
    int right = n - 1;
    int index = -1;  

    while (left <= right) {
        int mid = left + (right - left) / 2;
        
        if (arr[mid] == x) {
            index = mid;  
            break;
        }
        else if (arr[mid] < x) {
            left = mid + 1;  
        }
        else {
            right = mid - 1;  
        }
    }
    if (index != -1) {
        cout << "Индекс искомого элемента: " << index << endl;
    } else {
        cout << "Элемент не найден: -1" << endl;
    }
    
    return 0;
}
