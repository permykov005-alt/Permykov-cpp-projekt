#include <bits/stdc++.h>
using namespace std;
class Product {
    string name;
    double price;
    int quantity;
    
public:
    Product(string n = "", double p = 0, int q = 0) : name(n), price(p), quantity(q) {}
    
    bool isAvailable() const { return quantity > 0; }
    
    void show() const {
        cout << "Товар: " << name << "\nЦена: " << price 
             << "\nКоличество: " << quantity << "\nСтатус: " 
             << (isAvailable() ? "В наличии" : "Нет в наличии") << endl;
    }

    int getQuantity() const { return quantity; }
    void setQuantity(int q) { quantity = q; }
};
int main() {
    Product p1("Телефон", 19990, 5);
    p1.show();
    cout << endl;
    return 0;
}
